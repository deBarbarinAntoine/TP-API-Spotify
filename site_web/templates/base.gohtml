                    <a href="/album/jul">Albums</a>
                </div>
                <div class="line {{template "album-line-class" .}}"></div>
            </div>
            <div class="navDiv">
                <div class="navLink">
                    <a href="/track/sdm">Morceaux</a>
                </div>
                <div class="line {{template "track-line-class" .}}"></div>
